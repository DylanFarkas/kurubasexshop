---
import type { Product } from "../../types/product";

interface Props {
    products: Product[];
}

const { products } = Astro.props;
---

<div class="w-full px-4 md:px-25 pb-10">
    <div class="max-w-7xl mx-auto">
        <div
            id="products-grid"
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-10"
        >
            {products.map((product) => {
                const displayPrice = product.final_price ?? product.price;
                const hasDiscount = product.discount_pct && product.discount_pct > 0;

                return (
                    <article
                        class="product-card group bg-white border border-neutral-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300"
                        data-category={product.category}
                        data-price={displayPrice}
                        data-name={product.name}
                    >
                        <div class="relative aspect-square bg-neutral-100 overflow-hidden">
                            {product.image ? (
                                <img
                                    src={product.image}
                                    alt={product.name}
                                    class="w-full h-full object-cover duration-300"
                                    loading="lazy"
                                />
                            ) : (
                                <div class="w-full h-full flex items-center justify-center text-neutral-400">
                                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            )}

                            {hasDiscount && (
                                <div class="absolute top-2 right-2 bg-[#FA0445] text-white px-2 py-1 rounded-full text-xs font-bold">
                                    -{product.discount_pct}%
                                </div>
                            )}

                            {product.featured && (
                                <div class="absolute top-2 left-2 bg-[#FA0445] text-white px-2 py-1 rounded-full text-xs font-semibold">
                                    Destacado
                                </div>
                            )}
                        </div>

                        <div class="p-4">
                            <div class="mb-2">
                                <span class="text-xs text-neutral-500 uppercase tracking-wide">
                                    {product.category}
                                </span>
                            </div>

                            <h3 class="text-lg font-semibold text-neutral-900 mb-3 line-clamp-2">
                                {product.name}
                            </h3>

                            <div class="flex items-baseline gap-2 mb-4">
                                <span class="text-2xl font-bold text-neutral-900">
                                    ${displayPrice.toLocaleString()}
                                </span>
                                {hasDiscount && (
                                    <span class="text-sm text-neutral-500 line-through">
                                        ${product.price.toLocaleString()}
                                    </span>
                                )}
                            </div>

                            <button
                                class="w-full bg-white hover:bg-gray-600 hover:text-white border border-b-6 border-gray-700 text-gray-800 font-medium py-3 px-4 rounded-lg transition-colors duration-200 cursor-pointer"
                                data-product-id={product.id}
                            >
                                Ver Producto
                            </button>
                        </div>
                    </article>
                );
            })}
        </div>

        <div id="no-products" class="hidden text-center py-20">
            <p class="text-xl text-neutral-500">
                No se encontraron productos
            </p>
        </div>
    </div>
</div>