---
const tiles = [
  // Kuruba - arriba en columna 1
  {
    label: "KURUBA",
    slug: "kuruba",
    type: "brand",
    col: "col-span-2 lg:col-span-3",
    row: "row-span-2 lg:row-span-2",
    position: "col-start-1 lg:col-start-1 row-start-1",
    bg: "bg-neutral-200",
    text: "text-pink-600",
  },

  // Juguetes - abajo en columna 1 (grande vertical)
  {
    label: "JUGUETES",
    slug: "juguetes",
    type: "big",
    col: "col-span-1 lg:col-span-3",
    row: "row-span-3 lg:row-span-6",
    position:
      "col-start-1 lg:col-start-1 row-start-3 lg:row-start-3",
    bg: "bg-pink-600",
    text: "text-white",
  },

  // Lubricantes - mitad superior columna 2
  {
    label: "LUBRICANTES",
    slug: "lubricantes",
    type: "category",
    col: "col-span-1 lg:col-span-3",
    row: "row-span-3 lg:row-span-4",
    position: "col-start-2 lg:col-start-4 row-start-3 lg:row-start-1",
    bg: "bg-orange-500",
    text: "text-white",
  },

  // Masculino - mitad inferior columna 2
  {
    label: "MASCULINO",
    slug: "masculino",
    type: "category",
    col: "col-span-1 lg:col-span-3",
    row: "row-span-2 lg:row-span-4",
    position:
      "col-start-1 lg:col-start-4 row-start-6 lg:row-start-5",
    bg: "bg-neutral-200",
    text: "text-black",
  },

  // Lencería - mitad superior columna 3
  {
    label: "LENCERIA",
    slug: "lenceria",
    type: "category",
    col: "col-span-1 lg:col-span-3",
    row: "row-span-2 lg:row-span-4",
    position: "col-start-2 lg:col-start-7 row-start-6 lg:row-start-1",
    bg: "bg-neutral-200",
    text: "text-black",
  },

  // Bondaje - mitad inferior columna 3
  {
    label: "BONDAJE",
    slug: "bondaje",
    type: "category",
    col: "col-span-2 lg:col-span-3",
    row: "row-span-2 lg:row-span-4",
    position:
      "col-start-1 lg:col-start-7 row-start-8 lg:row-start-5",
    bg: "bg-purple-600",
    text: "text-white",
  },

  // Bienestar íntimo - arriba en columna 4
  {
    label: "BIENESTAR\nINTIMO",
    slug: "bienestar-intimo",
    type: "category",
    col: "col-span-2 lg:col-span-3",
    row: "row-span-2 lg:row-span-2",
    position: "col-start-1 lg:col-start-10 row-start-10 lg:row-start-1",
    bg: "bg-pink-600",
    text: "text-white",
  },

  // Ofertas - abajo en columna 4 (grande vertical)
  {
    label: "OFERTAS",
    slug: "ofertas",
    type: "image",
    col: "col-span-2 lg:col-span-3",
    row: "row-span-3 lg:row-span-6",
    position:
      "col-start-1 lg:col-start-10 row-start-12 lg:row-start-3",
    bg: "bg-neutral-200",
    text: "text-white",
  },
];
---

<section class="w-full bg-white min-h-screen lg:h-screen">
  <div class="w-full h-full px-4 sm:px-8 lg:px-20 py-6 sm:py-10 lg:py-20">
    <!-- Grid responsivo: 2 cols móvil/tablet, 12 cols desktop -->
    <div class="grid grid-cols-2 lg:grid-cols-12 gap-2 sm:gap-3 lg:gap-4 h-full
      auto-rows-fr lg:grid-rows-8 lg:auto-rows-fr min-h-0"
      >

      {
        tiles.map((t) => (
          <a
            href={`/categoria/${t.slug}`}
            class={`group relative overflow-hidden rounded-2xl sm:rounded-3xl
              ${t.bg} ${t.col} ${t.row} ${t.position}
              min-h-35 sm:min-h-40
              lg:min-h-0 lg:h-full
            `}
          >
            {/* Icono + (esquina superior derecha) */}
            <div class="absolute right-2 top-2 sm:right-4 sm:top-4 grid h-6 w-6 sm:h-7 sm:w-7 place-items-center rounded-full bg-white/90 text-black/80 shadow-sm">
              <span class="text-base sm:text-lg leading-none">+</span>
            </div>
            {/* Contenido */}
            <div class="absolute inset-0 flex items-end p-3 sm:p-4 lg:p-6">
              <div
                class={`${t.text} whitespace-pre-line text-sm sm:text-base lg:text-lg font-medium tracking-wide`}
              >
                {t.label}
              </div>
            </div>
            {/* Caso especial: Kuruba tile con logo arriba */}
            {t.type === "brand" && (
              <div class="absolute left-3 top-3 sm:left-4 sm:top-4 lg:left-6 lg:top-6 flex items-center gap-2 sm:gap-3">
                <div class="grid h-8 w-8 sm:h-9 sm:w-9 lg:h-10 lg:w-10 place-items-center rounded-full bg-pink-600 text-white font-semibold text-sm sm:text-base">
                  K
                </div>
              </div>
            )}
            {/* Caso especial: Juguetes con flecha */}
            {t.type === "big" && (
              <div class="absolute left-3 bottom-3 sm:left-4 sm:bottom-4 lg:left-6 lg:bottom-6">
                <div class="grid h-10 w-10 sm:h-11 sm:w-11 lg:h-12 lg:w-12 place-items-center rounded-full border border-white/80 text-white transition group-hover:scale-105">
                  <span class="text-lg sm:text-xl">→</span>
                </div>
              </div>
            )}
            {/* Caso especial: Ofertas con "imagen" (placeholder) */}
            {t.type === "image" && (
              <div class="absolute inset-0">
                {/* Cambia esto luego por tu imagen real */}
                <div class="h-full w-full bg-[radial-gradient(circle_at_20%_20%,#ff7aa6,transparent_55%),radial-gradient(circle_at_70%_60%,#ffb347,transparent_50%),radial-gradient(circle_at_40%_90%,#ff3f63,transparent_55%)] opacity-95" />
                <div class="absolute inset-0 bg-black/10" />
              </div>
            )}
            {/* Hover suave */}
            <div class="absolute inset-0 opacity-0 transition group-hover:opacity-100">
              <div class="absolute inset-0 bg-black/5" />
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>