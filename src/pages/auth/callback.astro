---
export const prerender = false;

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autenticando...</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f9fafb;
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loading {
      text-align: center;
    }
    .spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #e5e7eb;
      border-top-color: #ec4899;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .error {
      color: #dc2626;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="loading">
    <div class="spinner"></div>
    <p id="status">Autenticando...</p>
    <p id="error" class="error" style="display: none;"></p>
  </div>
  
  <script type="module" define:vars={{ supabaseUrl, supabaseAnonKey }}>
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
    
    const supabase = createClient(supabaseUrl, supabaseAnonKey, {
      auth: {
        flowType: 'pkce',
        detectSessionInUrl: true,
        persistSession: true,
        storageKey: 'kuruba-auth',
      },
    });
    
    const statusEl = document.getElementById('status');
    const errorEl = document.getElementById('error');
    
    async function handleCallback() {
      try {
        console.log('üîê Handling auth callback...');
        console.log('üìç Current URL:', window.location.href);
        console.log('üîë URL Params:', Object.fromEntries(new URL(window.location.href).searchParams));
        
        // Supabase cliente detectar√° autom√°ticamente el c√≥digo en la URL
        // y lo intercambiar√° por una sesi√≥n usando el code verifier del localStorage
        const { data, error } = await supabase.auth.getSession();
        
        if (error) {
          console.error('‚ùå Error getting session:', error);
          throw error;
        }
        
        if (data.session) {
          console.log('‚úÖ Session established successfully');
          console.log('üë§ User:', data.session.user.email);
          statusEl.textContent = 'Sincronizando sesi√≥n...';
          
          // Sincronizar sesi√≥n con el servidor (guardar en cookies)
          const syncResponse = await fetch('/api/auth/session', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            credentials: 'include',
            body: JSON.stringify({
              access_token: data.session.access_token,
              refresh_token: data.session.refresh_token,
            }),
          });
          
          if (!syncResponse.ok) {
            const errorData = await syncResponse.json();
            console.error('‚ùå Sync error:', errorData);
            throw new Error(`Error al sincronizar sesi√≥n: ${errorData.message || syncResponse.statusText}`);
          }
          
          console.log('‚úÖ Session synced with server');
          statusEl.textContent = '‚úì Autenticaci√≥n exitosa, redirigiendo...';
          
          // Peque√±o delay para que el usuario vea el mensaje
          setTimeout(() => {
            window.location.href = '/admin';
          }, 500);
        } else {
          // No hay sesi√≥n, intentar con exchangeCodeForSession manualmente
          console.log('‚ö†Ô∏è No session found, trying to exchange code...');
          
          const url = new URL(window.location.href);
          const code = url.searchParams.get('code');
          
          if (code) {
            console.log('üîÑ Attempting to exchange code for session...');
            const { data: sessionData, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
            
            if (exchangeError) {
              console.error('‚ùå Error exchanging code:', exchangeError);
              console.error('Code used:', code.substring(0, 10) + '...');
              throw exchangeError;
            }
            
            console.log('‚úÖ Code exchanged successfully');
            
            if (sessionData.session) {
              // Sincronizar sesi√≥n con el servidor
              statusEl.textContent = 'Sincronizando sesi√≥n...';
              
              const syncResponse = await fetch('/api/auth/session', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                credentials: 'include',
                body: JSON.stringify({
                  access_token: sessionData.session.access_token,
                  refresh_token: sessionData.session.refresh_token,
                }),
              });
              
              if (!syncResponse.ok) {
                const errorData = await syncResponse.json();
                console.error('‚ùå Sync error:', errorData);
                throw new Error(`Error al sincronizar sesi√≥n: ${errorData.message || syncResponse.statusText}`);
              }
              
              console.log('‚úÖ Session synced with server');
              statusEl.textContent = '‚úì Autenticaci√≥n exitosa, redirigiendo...';
              
              setTimeout(() => {
                window.location.href = '/admin';
              }, 500);
            } else {
              throw new Error('No session after code exchange');
            }
          } else {
            throw new Error('No session or code found in URL');
          }
        }
      } catch (error) {
        console.error('‚ùå Callback error:', error);
        console.error('Full error details:', JSON.stringify(error, null, 2));
        errorEl.textContent = `Error: ${error.message}`;
        errorEl.style.display = 'block';
        statusEl.textContent = 'Error al autenticar';
        
        // Redirigir al login despu√©s de 3 segundos para dar tiempo de ver el error
        setTimeout(() => {
          window.location.href = '/admin/login?error=auth_failed';
        }, 3000);
      }
    }
    
    // Ejecutar cuando cargue la p√°gina
    handleCallback();
  </script>
</body>
</html>
