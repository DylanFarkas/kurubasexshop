---
import { createServerClient } from '../../lib/supabaseServer';

export const prerender = false;

const supabase = createServerClient(Astro.cookies);

// Obtener code de la URL (PKCE flow) o token_hash (Magic Link)
const code = Astro.url.searchParams.get('code');
const tokenHash = Astro.url.searchParams.get('token_hash');
const type = Astro.url.searchParams.get('type') || 'email';

console.log('[Callback] URL params:', { 
  hasCode: !!code, 
  hasTokenHash: !!tokenHash, 
  type,
  fullUrl: Astro.url.href 
});

let error: string | null = null;

try {
  if (code) {
    // PKCE Flow: Intercambiar código por sesión
    console.log('[Callback] Exchanging code for session...');
    const { data, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
    
    if (exchangeError) {
      console.error('[Callback] Error exchanging code:', exchangeError);
      error = exchangeError.message;
    } else if (data.session) {
      console.log('[Callback] Session established successfully for user:', data.user?.email);
      return Astro.redirect('/admin');
    } else {
      error = 'No session after code exchange';
    }
  } else if (tokenHash) {
    // Magic Link con token_hash
    console.log('[Callback] Verifying OTP token...');
    const { data, error: verifyError } = await supabase.auth.verifyOtp({
      token_hash: tokenHash,
      type: type as any,
    });
    
    if (verifyError) {
      console.error('[Callback] Error verifying OTP:', verifyError);
      error = verifyError.message;
    } else if (data.session) {
      console.log('[Callback] Session established successfully for user:', data.user?.email);
      return Astro.redirect('/admin');
    } else {
      error = 'No session after token verification';
    }
  } else {
    // Intentar obtener sesión existente
    const { data: { session } } = await supabase.auth.getSession();
    if (session) {
      console.log('[Callback] Existing session found');
      return Astro.redirect('/admin');
    }
    error = 'No authentication code or token provided';
  }
} catch (err: any) {
  console.error('[Callback] Unexpected error:', err);
  error = err.message || 'Error de autenticación';
}

// Si llegamos aquí, hubo un error
if (error) {
  console.error('[Callback] Redirecting to login with error:', error);
  return Astro.redirect('/admin/login?error=auth_failed');
}
