---
export const prerender = false;

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autenticando...</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f9fafb;
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loading {
      text-align: center;
    }
    .spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #e5e7eb;
      border-top-color: #ec4899;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .error {
      color: #dc2626;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="loading">
    <div class="spinner"></div>
    <p id="status">Autenticando...</p>
    <p id="error" class="error" style="display: none;"></p>
  </div>
  
  <script type="module" define:vars={{ supabaseUrl, supabaseAnonKey }}>
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
    
    const supabase = createClient(supabaseUrl, supabaseAnonKey, {
      auth: {
        flowType: 'pkce',
        detectSessionInUrl: true,
        persistSession: true,
        storageKey: 'kuruba-auth',
      },
    });
    
    const statusEl = document.getElementById('status');
    const errorEl = document.getElementById('error');
    
    async function handleCallback() {
      try {
        console.log('Handling auth callback...');
        
        // Supabase cliente detectará automáticamente el código en la URL
        // y lo intercambiará por una sesión usando el code verifier del localStorage
        const { data, error } = await supabase.auth.getSession();
        
        if (error) {
          console.error('Error getting session:', error);
          throw error;
        }
        
        if (data.session) {
          console.log('Session established successfully');
          statusEl.textContent = 'Sincronizando sesión...';
          
          // Sincronizar sesión con el servidor (guardar en cookies)
          const syncResponse = await fetch('/api/auth/session', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            credentials: 'include',
            body: JSON.stringify({
              access_token: data.session.access_token,
              refresh_token: data.session.refresh_token,
            }),
          });
          
          if (!syncResponse.ok) {
            throw new Error('Error al sincronizar sesión con el servidor');
          }
          
          console.log('Session synced with server');
          
          // Verificar si el usuario es administrador
          statusEl.textContent = 'Verificando permisos de administrador...';
          
          const { data: adminUser, error: adminError } = await supabase
            .from('admin_users')
            .select('id')
            .eq('email', data.session.user.email)
            .single();
          
          if (adminError || !adminUser) {
            console.error('Usuario no es administrador:', adminError);
            // Cerrar sesión
            await supabase.auth.signOut();
            await fetch('/api/auth/signout', { method: 'POST', credentials: 'include' });
            throw new Error('No tienes permisos de administrador');
          }
          
          console.log('Usuario verificado como administrador');
          statusEl.textContent = '✓ Autenticación exitosa, redirigiendo...';
          
          // Pequeño delay para que el usuario vea el mensaje
          setTimeout(() => {
            window.location.href = '/admin';
          }, 500);
        } else {
          // No hay sesión, intentar con exchangeCodeForSession manualmente
          console.log('No session found, trying to exchange code...');
          
          const url = new URL(window.location.href);
          const code = url.searchParams.get('code');
          
          if (code) {
            const { data: sessionData, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
            
            if (exchangeError) {
              console.error('Error exchanging code:', exchangeError);
              throw exchangeError;
            }
            
            console.log('Code exchanged successfully');
            
            if (sessionData.session) {
              // Sincronizar sesión con el servidor
              statusEl.textContent = 'Sincronizando sesión...';
              
              const syncResponse = await fetch('/api/auth/session', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                credentials: 'include',
                body: JSON.stringify({
                  access_token: sessionData.session.access_token,
                  refresh_token: sessionData.session.refresh_token,
                }),
              });
              
              if (!syncResponse.ok) {
                throw new Error('Error al sincronizar sesión con el servidor');
              }
              
              console.log('Session synced with server');
              
              // Verificar si el usuario es administrador
              statusEl.textContent = 'Verificando permisos de administrador...';
              
              const { data: adminUser, error: adminError } = await supabase
                .from('admin_users')
                .select('id')
                .eq('email', sessionData.session.user.email)
                .single();
              
              if (adminError || !adminUser) {
                console.error('Usuario no es administrador:', adminError);
                // Cerrar sesión
                await supabase.auth.signOut();
                await fetch('/api/auth/signout', { method: 'POST', credentials: 'include' });
                throw new Error('No tienes permisos de administrador');
              }
              
              console.log('Usuario verificado como administrador');
              statusEl.textContent = '✓ Autenticación exitosa, redirigiendo...';
              
              setTimeout(() => {
                window.location.href = '/admin';
              }, 500);
            } else {
              throw new Error('No session after code exchange');
            }
          } else {
            throw new Error('No session or code found');
          }
        }
      } catch (error) {
        console.error('Callback error:', error);
        errorEl.textContent = `Error: ${error.message}`;
        errorEl.style.display = 'block';
        statusEl.textContent = 'Error al autenticar';
        
        // Redirigir al login después de 3 segundos
        setTimeout(() => {
          window.location.href = '/admin/login?error=auth_failed';
        }, 3000);
      }
    }
    
    // Ejecutar cuando cargue la página
    handleCallback();
  </script>
</body>
</html>
