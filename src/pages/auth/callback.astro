---
import { createServerClient } from '../../lib/supabaseServer';

export const prerender = false;

// Intentar obtener la sesión del servidor primero
const supabase = createServerClient(Astro.cookies);
const { data: { session: serverSession } } = await supabase.auth.getSession();

// Si ya hay sesión en el servidor, redirigir inmediatamente
if (serverSession) {
  return Astro.redirect('/admin');
}

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autenticando...</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f9fafb;
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loading {
      text-align: center;
    }
    .spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #e5e7eb;
      border-top-color: #ec4899;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .error {
      color: #dc2626;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="loading">
    <div class="spinner"></div>
    <p id="status">Autenticando...</p>
    <p id="error" class="error" style="display: none;"></p>
  </div>
  
  <script type="module" define:vars={{ supabaseUrl, supabaseAnonKey }}>
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
    
    const supabase = createClient(supabaseUrl, supabaseAnonKey, {
      auth: {
        flowType: 'pkce',
        detectSessionInUrl: true,
        persistSession: true,
        storageKey: 'kuruba-auth',
      },
    });
    
    const statusEl = document.getElementById('status');
    const errorEl = document.getElementById('error');
    
    async function handleCallback() {
      try {
        console.log('Handling auth callback...');
        console.log('Current URL:', window.location.href);
        
        const url = new URL(window.location.href);
        const hasCode = url.searchParams.has('code');
        const hasTokenHash = url.searchParams.has('token_hash');
        const hasAccessToken = url.hash.includes('access_token');
        
        console.log('URL params:', { hasCode, hasTokenHash, hasAccessToken });
        
        // Método 1: Si hay token_hash (magic link legacy)
        if (hasTokenHash) {
          console.log('Using token_hash flow...');
          const tokenHash = url.searchParams.get('token_hash');
          const type = url.searchParams.get('type') || 'email';
          
          const { data, error } = await supabase.auth.verifyOtp({
            token_hash: tokenHash,
            type: type,
          });
          
          if (error) throw error;
          if (!data.session) throw new Error('No session after token verification');
          
          await syncSessionWithServer(data.session);
          return;
        }
        
        // Método 2: Si hay access_token en el hash (implicit flow)
        if (hasAccessToken) {
          console.log('Using access_token from hash...');
          const hashParams = new URLSearchParams(url.hash.substring(1));
          const accessToken = hashParams.get('access_token');
          const refreshToken = hashParams.get('refresh_token');
          
          if (accessToken && refreshToken) {
            const { data, error } = await supabase.auth.setSession({
              access_token: accessToken,
              refresh_token: refreshToken,
            });
            
            if (error) throw error;
            if (!data.session) throw new Error('No session after setSession');
            
            await syncSessionWithServer(data.session);
            return;
          }
        }
        
        // Método 3: Detectar sesión automáticamente (PKCE flow)
        console.log('Trying automatic session detection...');
        const { data, error } = await supabase.auth.getSession();
        
        if (error) {
          console.error('Error getting session:', error);
          throw error;
        }
        
        if (data.session) {
          console.log('Session found via automatic detection');
          await syncSessionWithServer(data.session);
          return;
        }
        
        // Método 4: Intentar intercambiar código manualmente
        if (hasCode) {
          console.log('Trying manual code exchange...');
          const code = url.searchParams.get('code');
          
          const { data: sessionData, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
          
          if (exchangeError) {
            console.error('Error exchanging code:', exchangeError);
            throw exchangeError;
          }
          
          if (!sessionData.session) {
            throw new Error('No session after code exchange');
          }
          
          console.log('Code exchanged successfully');
          await syncSessionWithServer(sessionData.session);
          return;
        }
        
        // Si llegamos aquí, no pudimos obtener una sesión
        throw new Error('No se pudo establecer la sesión. Verifica la configuración de Supabase.');
      } catch (error) {
        console.error('Callback error:', error);
        errorEl.textContent = `Error: ${error.message}`;
        errorEl.style.display = 'block';
        statusEl.textContent = 'Error al autenticar';
        
        // Redirigir al login después de 3 segundos
        setTimeout(() => {
          window.location.href = '/admin/login?error=auth_failed';
        }, 3000);
      }
    }
    
    async function syncSessionWithServer(session) {
      try {
        console.log('Syncing session with server...');
        statusEl.textContent = 'Sincronizando sesión...';
        
        const syncResponse = await fetch('/api/auth/session', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          credentials: 'include',
          body: JSON.stringify({
            access_token: session.access_token,
            refresh_token: session.refresh_token,
          }),
        });
        
        if (!syncResponse.ok) {
          const errorData = await syncResponse.json().catch(() => ({}));
          throw new Error(errorData.message || 'Error al sincronizar sesión con el servidor');
        }
        
        console.log('Session synced successfully');
        statusEl.textContent = '✓ Autenticación exitosa, redirigiendo...';
        
        // Esperar un momento y redirigir
        setTimeout(() => {
          window.location.href = '/admin';
        }, 500);
      } catch (error) {
        console.error('Sync error:', error);
        throw error;
      }
    }
    
    // Ejecutar cuando cargue la página
    handleCallback();
  </script>
</body>
</html>
