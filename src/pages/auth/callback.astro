import { createServerClient } from '../../lib/supabaseServer';

export const prerender = false;

// Manejar el callback en el servidor
const code = Astro.url.searchParams.get('code');
const next = Astro.url.searchParams.get('next') || '/admin';

console.log('[Auth Callback] Code received:', !!code);
console.log('[Auth Callback] Next redirect:', next);

if (code) {
  const supabase = createServerClient(Astro.cookies);
  
  const { data, error } = await supabase.auth.exchangeCodeForSession(code);
  
  if (error) {
    console.error('[Auth Callback] Error exchanging code:', error);
    return Astro.redirect('/admin/login?error=auth_failed');
  }
  
  if (data.session) {
    console.log('[Auth Callback] Session established for:', data.session.user.email);
    
    // Verificar si es admin
    const { data: adminUser, error: adminError } = await supabase
      .from('admin_users')
      .select('id')
      .eq('email', data.session.user.email)
      .single();
    
    console.log('[Auth Callback] Admin user exists:', !!adminUser);
    console.log('[Auth Callback] Admin check error:', adminError);
    
    if (!adminUser) {
      console.log('[Auth Callback] User is not admin, signing out');
      await supabase.auth.signOut();
      return Astro.redirect('/admin/login?error=not_authorized');
    }
    
    console.log('[Auth Callback] Redirecting to:', next);
    return Astro.redirect(next);
  }
}

console.log('[Auth Callback] No valid code, redirecting to login');
return Astro.redirect('/admin/login?error=invalid_callback');
