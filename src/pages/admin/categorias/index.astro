---
import BaseAdminLayout from '../../../layouts/BaseAdminLayout.astro';
import StatCard from '../../../components/admin/StatCard';
import { supabaseAdmin } from '../../../lib/supabaseAdmin';
import type { Category } from '../../../types/category';

export const prerender = false;

// Obtener todas las categorías ordenadas por posición
const { data: categories, error } = await supabaseAdmin
  .from('categories')
  .select('*')
  .order('order_position', { ascending: true });

if (error) {
  console.error('Error fetching categories:', error);
}

const categoriesData = (categories || []) as Category[];

// Contar categorías activas e inactivas
const activeCount = categoriesData.filter(c => c.active).length;
const inactiveCount = categoriesData.filter(c => !c.active).length;

// Obtener conteo de productos por categoría
const categoriesWithCount = await Promise.all(
  categoriesData.map(async (category) => {
    const { count } = await supabaseAdmin
      .from('products')
      .select('*', { count: 'exact', head: true })
      .eq('category_id', category.id);
    
    return {
      ...category,
      productCount: count || 0,
    };
  })
);
---

<BaseAdminLayout title="Gestión de Categorías">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Categorías</h1>
        <p class="mt-2 text-sm text-gray-600">
          Gestiona las categorías de productos de tu tienda
        </p>
      </div>
      <a
        href="/admin/categorias/nuevo"
        class="bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-700 transition font-semibold"
      >
        + Nueva Categoría
      </a>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <StatCard 
        label="Total de categorías" 
        value={categoriesData.length} 
        color="text-blue-600" 
      />
      <StatCard 
        label="Categorías activas" 
        value={activeCount} 
        color="text-green-600" 
      />
      <StatCard 
        label="Categorías inactivas" 
        value={inactiveCount} 
        color="text-gray-600" 
      />
    </div>

    <!-- Tabla de categorías -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Todas las categorías</h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Posición
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Nombre
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Slug
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Productos
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Estado
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {categoriesWithCount.length === 0 ? (
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                  No hay categorías creadas. <a href="/admin/categorias/nuevo" class="text-pink-600 hover:text-pink-700 font-medium">Crear la primera</a>
                </td>
              </tr>
            ) : (
              categoriesWithCount.map((category) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      {category.order_position}
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-semibold text-gray-900">
                      {category.label}
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-600">
                      /{category.slug}
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      {category.productCount} producto{category.productCount !== 1 ? 's' : ''}
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    {category.active ? (
                      <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                        Activa
                      </span>
                    ) : (
                      <span class="px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
                        Inactiva
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <div class="flex gap-3">
                      <a
                        href={`/admin/categorias/${category.id}`}
                        class="text-pink-600 hover:text-pink-900 font-medium"
                      >
                        Editar
                      </a>
                      <button
                        data-category-id={category.id}
                        data-category-name={category.label}
                        data-product-count={category.productCount}
                        class="delete-btn text-red-600 hover:text-red-900 font-medium"
                      >
                        Eliminar
                      </button>
                    </div>
                  </td>
                </tr>
              ))
            )}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Manejar eliminación de categorías
    document.querySelectorAll('.delete-btn').forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.target as HTMLButtonElement;
        const categoryId = btn.dataset.categoryId;
        const categoryName = btn.dataset.categoryName;
        const productCount = parseInt(btn.dataset.productCount || '0');
        
        if (!categoryId) return;

        // Advertencia si tiene productos
        if (productCount > 0) {
          alert(`No se puede eliminar la categoría "${categoryName}" porque tiene ${productCount} producto(s) asociado(s). Primero debes reasignar o eliminar esos productos.`);
          return;
        }

        const confirmed = confirm(`¿Estás seguro de que deseas eliminar la categoría "${categoryName}"?`);
        
        if (!confirmed) return;

        btn.disabled = true;
        btn.textContent = 'Eliminando...';

        try {
          const response = await fetch(`/api/categories/delete?id=${categoryId}`, {
            method: 'DELETE',
          });

          const result = await response.json();

          if (!response.ok) {
            throw new Error(result.message || 'Error al eliminar');
          }

          window.location.reload();
        } catch (error) {
          console.error('Error:', error);
          alert(error instanceof Error ? error.message : 'Error al eliminar la categoría');
          btn.disabled = false;
          btn.textContent = 'Eliminar';
        }
      });
    });
  </script>
</BaseAdminLayout>