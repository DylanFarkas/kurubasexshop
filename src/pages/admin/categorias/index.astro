---
import BaseAdminLayout from '../../../layouts/BaseAdminLayout.astro';
import StatCard from '../../../components/admin/StatCard';
import { supabaseAdmin } from '../../../lib/supabaseAdmin';
import type { Category } from '../../../types/category';
import { Icon } from 'astro-icon/components';

export const prerender = false;

// Obtener todas las categorías ordenadas por posición
const { data: categories, error } = await supabaseAdmin
  .from('categories')
  .select('*')
  .order('order_position', { ascending: true });

if (error) {
  console.error('Error fetching categories:', error);
}

const categoriesData = (categories || []) as Category[];

// Contar categorías activas e inactivas
const activeCount = categoriesData.filter(c => c.active).length;
const inactiveCount = categoriesData.filter(c => !c.active).length;

// Obtener conteo de productos por categoría
const categoriesWithCount = await Promise.all(
  categoriesData.map(async (category) => {
    const { count } = await supabaseAdmin
      .from('products')
      .select('*', { count: 'exact', head: true })
      .eq('category_id', category.id);
    
    return {
      ...category,
      productCount: count || 0,
    };
  })
);
---

<BaseAdminLayout title="Categorías">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <p class="text-gray-600 dark:text-gray-400 text-sm">Organiza y gestiona las categorías de productos</p>
    </div>
    <a
      href="/admin/categorias/nuevo"
      class="px-5 py-2.5 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition-all flex items-center gap-2 font-medium">
      <Icon name="plus" class="w-5 h-5" />
      Nueva Categoría
    </a>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 transition-colors">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total de categorías</p>
          <p class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-1">{categoriesData.length}</p>
        </div>
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
          <Icon name="tag" class="w-6 h-6 text-white" />
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 transition-colors">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Categorías activas</p>
          <p class="text-3xl font-bold text-green-600 dark:text-green-400 mt-1">{activeCount}</p>
        </div>
        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
          <Icon name="check" class="w-6 h-6 text-white" />
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 transition-colors">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Categorías inactivas</p>
          <p class="text-3xl font-bold text-gray-600 dark:text-gray-400 mt-1">{inactiveCount}</p>
        </div>
        <div class="w-12 h-12 bg-gray-500 rounded-lg flex items-center justify-center">
          <Icon name="block" class="w-6 h-6 text-white" />
        </div>
      </div>
    </div>
  </div>

  <!-- Tabla de categorías -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden transition-colors">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 flex items-center gap-2">
        <Icon name="list" class="w-5 h-5 text-pink-500" />
        Todas las categorías
      </h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Posición
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Nombre
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Slug
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Productos
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Estado
            </th>
            <th class="px-6 py-4 text-right text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          {categoriesWithCount.length === 0 ? (
            <tr>
              <td colspan="6" class="px-6 py-16 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-pink-100 dark:bg-pink-900/30 mb-4">
                  <Icon name="tag" class="w-8 h-8 text-pink-500 dark:text-pink-400" />
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-1">No hay categorías creadas</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Comienza organizando tus productos con categorías</p>
                <a 
                  href="/admin/categorias/nuevo" 
                  class="inline-flex items-center px-5 py-2.5 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition-all font-medium">
                >
                  <Icon name="plus" class="w-5 h-5 mr-2" />
                  Crear Primera Categoría
                </a>
              </td>
            </tr>
          ) : (
            categoriesWithCount.map((category) => (
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-linear-to-br from-pink-100 to-pink-200 dark:from-pink-900/30 dark:to-pink-800/30 text-pink-700 dark:text-pink-300 font-bold text-sm">
                    {category.order_position}
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm font-semibold text-gray-900 dark:text-gray-100">
                    {category.label}
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-600 dark:text-gray-400 font-mono">
                    /{category.slug}
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 border border-blue-200 dark:border-blue-800">
                      <Icon name="box" class="w-3 h-3 mr-1" />
                      {category.productCount} producto{category.productCount !== 1 ? 's' : ''}
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {category.active ? (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-800">
                      <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1.5"></span>
                      Activa
                    </span>
                  ) : (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 border border-gray-200 dark:border-gray-600">
                      <span class="w-1.5 h-1.5 rounded-full bg-gray-500 mr-1.5"></span>
                      Inactiva
                    </span>
                  )}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href={`/admin/categorias/${category.id}`}
                      class="p-2 text-pink-600 dark:text-pink-400 hover:text-pink-900 dark:hover:text-pink-300 hover:bg-pink-50 dark:hover:bg-pink-900/20 rounded-lg transition-all font-medium"
                      title="Editar categoría"
                    >
                      <Icon name="edit" class="w-5 h-5" />
                    </a>
                    <button
                      data-category-id={category.id}
                      data-category-name={category.label}
                      data-product-count={category.productCount}
                      class="delete-btn p-2 text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all font-medium cursor-pointer"
                      title="Eliminar categoría"
                    >
                      <Icon name="delete" class="w-5 h-5" />
                    </button>
                  </div>
                </td>
              </tr>
            ))
          )}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal de confirmación para eliminar -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 p-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 max-w-md w-full mx-auto transform transition-all">
      <div class="p-6">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center">
            <Icon name="warning" class="w-6 h-6 text-red-600 dark:text-red-400" />
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">¿Eliminar categoría?</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">Esta acción no se puede deshacer</p>
          </div>
        </div>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-4" id="deleteModalContent">
          <p class="text-sm text-gray-900 dark:text-gray-100">Estás a punto de eliminar:</p>
          <p class="font-semibold text-gray-900 dark:text-gray-100 mt-1" id="categoryName"></p>
          <p class="text-xs text-gray-600 dark:text-gray-400 mt-2" id="deleteWarning"></p>
        </div>
        <div class="flex gap-3">
          <button 
            id="cancelDelete" 
            type="button" 
            class="flex-1 px-4 py-2.5 border-2 border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-all font-medium text-gray-700 dark:text-gray-300 cursor-pointer"
          >
            Cancelar
          </button>
          <button 
            id="confirmDelete" 
            type="button" 
            class="flex-1 px-4 py-2.5 bg-linear-to-r from-red-500 to-red-600 text-white rounded-lg hover:from-red-600 hover:to-red-700 transition-all font-medium cursor-pointer">
          
            Sí, eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { toast } from 'sonner';

    const deleteModal = document.getElementById('deleteModal');
    const categoryNameEl = document.getElementById('categoryName');
    const deleteWarningEl = document.getElementById('deleteWarning');
    const cancelDeleteBtn = document.getElementById('cancelDelete');
    const confirmDeleteBtn = document.getElementById('confirmDelete');
    
    let categoryIdToDelete: string | null = null;

    // Manejar eliminación de categorías
    document.querySelectorAll('.delete-btn').forEach(button => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        const btn = e.currentTarget as HTMLElement;
        const categoryId = btn.dataset.categoryId;
        const categoryName = btn.dataset.categoryName;
        const productCount = parseInt(btn.dataset.productCount || '0');
        
        if (!categoryId || !categoryName) return;

        categoryIdToDelete = categoryId;

        if (categoryNameEl) categoryNameEl.textContent = categoryName;
        
        // Advertencia si tiene productos
        if (productCount > 0) {
          if (deleteWarningEl) {
            deleteWarningEl.textContent = `⚠️ No se puede eliminar porque tiene ${productCount} producto(s) asociado(s). Primero debes reasignar o eliminar esos productos.`;
          }
          if (confirmDeleteBtn) {
            confirmDeleteBtn.style.display = 'none';
          }
        } else {
          if (deleteWarningEl) {
            deleteWarningEl.textContent = 'La categoría será eliminada permanentemente.';
          }
          if (confirmDeleteBtn) {
            confirmDeleteBtn.style.display = 'block';
          }
        }

        deleteModal?.classList.remove('hidden');
        deleteModal?.classList.add('flex');
      });
    });

    cancelDeleteBtn?.addEventListener('click', () => {
      deleteModal?.classList.add('hidden');
      deleteModal?.classList.remove('flex');
      categoryIdToDelete = null;
    });

    confirmDeleteBtn?.addEventListener('click', async () => {
      if (!categoryIdToDelete) return;

      try {
        (confirmDeleteBtn as HTMLButtonElement).disabled = true;
        confirmDeleteBtn.textContent = 'Eliminando...';

        const response = await fetch(`/api/categories/delete?id=${categoryIdToDelete}`, {
          method: 'DELETE',
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.message || 'Error al eliminar');
        }

        sessionStorage.setItem('adminToast', JSON.stringify({ type: 'success', message: 'Categoría eliminada exitosamente' }));
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        toast.error(error instanceof Error ? error.message : 'Error al eliminar la categoría');
        (confirmDeleteBtn as HTMLButtonElement).disabled = false;
        confirmDeleteBtn.textContent = 'Sí, eliminar';
      }
    });
  </script>
</BaseAdminLayout>