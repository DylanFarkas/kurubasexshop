---
import BaseAdminLayout from '../../../layouts/BaseAdminLayout.astro';
import CategoryForm from '../../../components/admin/CategoryForm';
import { supabaseAdmin } from '../../../lib/supabaseAdmin';
import type { Category } from '../../../types/category';

export const prerender = false;

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/categorias');
}

// Obtener la categor√≠a
const { data: category, error } = await supabaseAdmin
  .from('categories')
  .select('*')
  .eq('id', id)
  .single();

if (error || !category) {
  console.error('Error fetching category:', error);
  return Astro.redirect('/admin/categorias');
}

const categoryData = category as Category;

// Obtener conteo de productos
const { count: productCount } = await supabaseAdmin
  .from('products')
  .select('*', { count: 'exact', head: true })
  .eq('category_id', id);
---

<BaseAdminLayout title={`Editar: ${categoryData.label}`}>
  <div class="max-w-2xl">
    <!-- Header con bot√≥n de volver -->
    <div class="flex items-center gap-4 mb-6">
      <a 
        href="/admin/categorias"
        class="text-gray-600 hover:text-gray-900"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </a>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Editar Categor√≠a</h1>
        <p class="mt-1 text-sm text-gray-600">
          Actualiza la informaci√≥n de "{categoryData.label}"
        </p>
      </div>
    </div>

    <!-- Info de productos asociados -->
    {productCount && productCount > 0 && (
      <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="text-sm text-yellow-800">
            <p class="font-semibold">Esta categor√≠a tiene {productCount} producto{productCount !== 1 ? 's' : ''} asociado{productCount !== 1 ? 's' : ''}</p>
            <p class="mt-1">Los cambios en el slug o nombre pueden afectar las URLs de esos productos.</p>
          </div>
        </div>
      </div>
    )}

    <!-- Formulario -->
    <div class="bg-white rounded-lg shadow p-6">
      <CategoryForm category={categoryData} client:load />
    </div>

    <!-- Informaci√≥n adicional -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-blue-900 mb-2">üí° Consejos:</h3>
      <ul class="text-sm text-blue-800 space-y-1">
        <li>‚Ä¢ Cambiar el slug afectar√° las URLs de los productos de esta categor√≠a</li>
        <li>‚Ä¢ Desactivar la categor√≠a ocultar√° todos sus productos del sitio p√∫blico</li>
        <li>‚Ä¢ La posici√≥n determina el orden en el men√∫ de navegaci√≥n</li>
      </ul>
    </div>
  </div>
</BaseAdminLayout>