---
import BaseAdminLayout from '../../../layouts/BaseAdminLayout.astro';
import CategoryForm from '../../../components/admin/CategoryForm';
import { supabaseAdmin } from '../../../lib/supabaseAdmin';
import type { Category } from '../../../types/category';
import { Icon } from 'astro-icon/components';

export const prerender = false;

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/categorias');
}

// Obtener la categoría
const { data: category, error } = await supabaseAdmin
  .from('categories')
  .select('*')
  .eq('id', id)
  .single();

if (error || !category) {
  console.error('Error fetching category:', error);
  return Astro.redirect('/admin/categorias');
}

const categoryData = category as Category;

// Obtener conteo de productos
const { count: productCount } = await supabaseAdmin
  .from('products')
  .select('*', { count: 'exact', head: true })
  .eq('category_id', id);
---

<BaseAdminLayout title={`Editar: ${categoryData.label}`}>
  <div class="max-w-2xl">
    <!-- Header con botón de volver -->
    <div class="flex items-center gap-4 mb-6">
      <a 
        href="/admin/categorias"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
      >
        <Icon name="back" class="w-6 h-6" />
      </a>
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Editar Categoría</h1>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
          Actualiza la información de "{categoryData.label}"
        </p>
      </div>
    </div>

    <!-- Info de productos asociados -->
    {productCount && productCount > 0 ? (
      <div class="mb-6 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
        <div class="flex items-start gap-2">
          <Icon name="information" class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mt-0.5" />
          <div class="text-sm text-yellow-800 dark:text-yellow-300">
            <p class="font-semibold">Esta categoría tiene {productCount} producto{productCount !== 1 ? 's' : ''} asociado{productCount !== 1 ? 's' : ''}</p>
            <p class="mt-1">Los cambios en el slug o nombre pueden afectar las URLs de esos productos.</p>
          </div>
        </div>
      </div>
    ) : (
      <div class="mb-6 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <div class="flex items-start gap-2">
          <Icon name="check" class="w-5 h-5 text-green-600 dark:text-green-400 mt-0.5" />
          <div class="text-sm text-green-800 dark:text-green-300">
            <p class="font-semibold">Esta categoría no tiene productos asociados</p>
            <p class="mt-1">Puedes editar libremente el slug y otros campos sin afectar productos existentes.</p>
          </div>
        </div>
      </div>
    )}

    <!-- Formulario -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 transition-colors">
      <CategoryForm category={categoryData} client:load />
    </div>

    <!-- Información adicional -->
    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-blue-900 dark:text-blue-300 mb-2">Consejos:</h3>
      <ul class="text-sm text-blue-800 dark:text-blue-300 space-y-1">
        <li>• Cambiar el slug afectará las URLs de los productos de esta categoría</li>
        <li>• Desactivar la categoría ocultará todos sus productos del sitio público</li>
        <li>• La posición determina el orden en el menú de navegación</li>
      </ul>
    </div>
  </div>
</BaseAdminLayout>