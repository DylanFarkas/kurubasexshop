---
import BaseAdminLayout from '../../../layouts/BaseAdminLayout.astro';
import { supabaseAdmin } from '../../../lib/supabaseAdmin';
import { generateWhatsAppLink } from '../../../lib/whatsapp';
import { formatPrice, formatDateTime } from '../../../utils/formatters';
import type { Order, OrderStatus } from '../../../types/order';
import { Icon } from 'astro-icon/components';

export const prerender = false;

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/pedidos');
}

// Obtener la orden
const { data: order, error } = await supabaseAdmin
  .from('orders')
  .select('*')
  .eq('id', id)
  .single();

if (error || !order) {
  console.error('Error fetching order:', error);
  return Astro.redirect('/admin/pedidos');
}

const orderData = order as Order;

// Generar link de WhatsApp
const whatsappLink = generateWhatsAppLink(orderData);

// Colores de estado
const statusColors: Record<OrderStatus, string> = {
  pending: 'bg-yellow-100 text-yellow-800',
  confirmed: 'bg-blue-100 text-blue-800',
  processing: 'bg-purple-100 text-purple-800',
  shipped: 'bg-indigo-100 text-indigo-800',
  delivered: 'bg-green-100 text-green-800',
  cancelled: 'bg-red-100 text-red-800',
};

const statusLabels: Record<OrderStatus, string> = {
  pending: 'Pendiente',
  confirmed: 'Confirmado',
  processing: 'En proceso',
  shipped: 'Enviado',
  delivered: 'Entregado',
  cancelled: 'Cancelado',
};
---

<BaseAdminLayout title={`Pedido #${orderData.order_number}`}>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a 
          href="/admin/pedidos"
          class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
        >
          <Icon name="back" class="w-6 h-6" />
        </a>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Pedido #{orderData.order_number}</h1>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
            Realizado el {formatDateTime(orderData.created_at)}
          </p>
        </div>
      </div>
      <div>
        <span class={`px-4 py-2 rounded-full text-sm font-semibold ${statusColors[orderData.status]}`}>
          {statusLabels[orderData.status]}
        </span>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        <!-- Productos -->
        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-colors">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Productos</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {orderData.items.map((item) => (
                <div class="flex items-center gap-4 pb-4 border-b border-gray-200 dark:border-gray-700 last:border-0">
                  {item.image && (
                    <img 
                      src={item.image} 
                      alt={item.name}
                      class="w-16 h-16 object-cover rounded"
                    />
                  )}
                  <div class="flex-1">
                    <h3 class="font-medium text-gray-900 dark:text-gray-100">{item.name}</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Cantidad: {item.quantity}</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-gray-900 dark:text-gray-100">
                      {formatPrice(item.price * item.quantity)}
                    </p>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      {formatPrice(item.price)} c/u
                    </p>
                  </div>
                </div>
              ))}
            </div>
            
            <!-- Totales -->
            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700 space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600 dark:text-gray-400">Subtotal</span>
                <span class="text-gray-900 dark:text-gray-100">{formatPrice(orderData.subtotal)}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600 dark:text-gray-400">Envío</span>
                <span class="text-gray-900 dark:text-gray-100">
                  {orderData.shipping_cost > 0 ? formatPrice(orderData.shipping_cost) : 'Gratis'}
                </span>
              </div>
              <div class="flex justify-between text-lg font-bold pt-2 border-t border-gray-200 dark:border-gray-700">
                <span class="text-gray-900 dark:text-gray-100">Total</span>
                <span class="text-pink-600 dark:text-pink-400">{formatPrice(orderData.total)}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Notas del cliente -->
        {orderData.notes && (
          <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-colors">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Notas del cliente</h2>
            </div>
            <div class="p-6">
              <p class="text-gray-700 dark:text-gray-300">{orderData.notes}</p>
            </div>
          </div>
        )}
      </div>

      <div class="space-y-6">
        <!-- Información del cliente -->
        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-colors">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Cliente</h2>
          </div>
          <div class="p-6 space-y-3">
            <div>
              <p class="text-sm text-gray-600 dark:text-gray-400">Nombre</p>
              <p class="font-medium text-gray-900 dark:text-gray-100">{orderData.customer_name}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600 dark:text-gray-400">Teléfono</p>
              <p class="font-medium text-gray-900 dark:text-gray-100">
                <a href={`tel:${orderData.customer_phone}`} class="text-pink-600 dark:text-pink-400 hover:text-pink-700 dark:hover:text-pink-300">
                  {orderData.customer_phone}
                </a>
              </p>
            </div>
            {orderData.customer_email && (
              <div>
                <p class="text-sm text-gray-600 dark:text-gray-400">Email</p>
                <p class="font-medium text-gray-900 dark:text-gray-100">
                  <a href={`mailto:${orderData.customer_email}`} class="text-pink-600 dark:text-pink-400 hover:text-pink-700 dark:hover:text-pink-300">
                    {orderData.customer_email}
                  </a>
                </p>
              </div>
            )}
          </div>
        </div>

        <!-- Cambiar estado -->
        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-colors">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Estado del pedido</h2>
          </div>
          <div class="p-6">
            <form id="status-form" class="space-y-4">
              <select
                id="status-select"
                name="status"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-colors"
              >
                <option value="pending" selected={orderData.status === 'pending'}>Pendiente</option>
                <option value="confirmed" selected={orderData.status === 'confirmed'}>Confirmado</option>
                <option value="processing" selected={orderData.status === 'processing'}>En proceso</option>
                <option value="shipped" selected={orderData.status === 'shipped'}>Enviado</option>
                <option value="delivered" selected={orderData.status === 'delivered'}>Entregado</option>
                <option value="cancelled" selected={orderData.status === 'cancelled'}>Cancelado</option>
              </select>
              <button
                type="submit"
                class="w-full bg-pink-600 dark:bg-pink-700 text-white px-4 py-2 rounded-lg hover:bg-pink-700 dark:hover:bg-pink-800 transition font-medium cursor-pointer"
              >
                Actualizar estado
              </button>
            </form>
          </div>
        </div>

        <!-- WhatsApp -->
        <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-colors">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">WhatsApp</h2>
          </div>
          <div class="p-6">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 w-full bg-green-600 dark:bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-700 dark:hover:bg-green-800 transition font-medium cursor-pointer"
            >
              <Icon name="whatsapp" class="w-5 h-5" />
              Reenviar mensaje
            </a>
            {orderData.whatsapp_sent_at && (
              <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 text-center">
                Último envío: {formatDateTime(orderData.whatsapp_sent_at)}
              </p>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('status-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const form = e.target as HTMLFormElement;
      const select = form.querySelector('#status-select') as HTMLSelectElement;
      const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      
      const orderId = window.location.pathname.split('/').pop();
      const newStatus = select.value;
      
      button.disabled = true;
      button.textContent = 'Actualizando...';
      
      try {
        const response = await fetch(`/api/orders/update?id=${orderId}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: newStatus }),
        });
        
        if (!response.ok) throw new Error('Error al actualizar');
        
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert('Error al actualizar el estado');
        button.disabled = false;
        button.textContent = 'Actualizar estado';
      }
    });
  </script>
</BaseAdminLayout>