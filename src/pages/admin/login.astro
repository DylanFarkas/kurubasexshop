---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { createServerClient } from '../../lib/supabaseServer';
import { Icon } from 'astro-icon/components';

export const prerender = false;

// Si ya está autenticado, redirigir
const supabase = createServerClient(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();

if (session) {
  return Astro.redirect('/admin');
}

// Obtener mensajes de error de la URL
const errorParam = Astro.url.searchParams.get('error');
const errorMessages: Record<string, string> = {
  'auth_failed': 'Error al autenticar. Por favor, intenta nuevamente.',
  'not_authorized': 'No tienes permisos de administrador.',
  'session_expired': 'Tu sesión ha expirado. Por favor, inicia sesión nuevamente.',
};
const errorMessage = errorParam ? errorMessages[errorParam] : null;
---

<BaseLayout title="Admin Login - Kuruba">
  <main class="min-h-screen flex items-center justify-center bg-white px-4 py-12">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-40"></div>
    
    <div class="max-w-md w-full relative z-10">
      <!-- Header con logo/icono -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-linear-to-br from-rose-500 to-pink-600 rounded-3xl shadow-lg shadow-rose-200 mb-6">
          <Icon name="admin" class="text-white" size={40} />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold bg-linear-to-r from-rose-600 to-pink-600 bg-clip-text text-transparent mb-3">
          Kuruba Admin
        </h1>
        <p class="text-neutral-600 text-lg">Panel de administración</p>
      </div>

      <!-- Card principal -->
      <div class="bg-white/80 backdrop-blur-xl rounded-3xl border border-neutral-200/50 shadow-2xl shadow-neutral-900/5 p-8 md:p-10">
        {errorMessage && (
          <div class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-xl text-sm flex items-start gap-3">
            <Icon name="alert-circle" class="shrink-0 mt-0.5" size={20} />
            <span>{errorMessage}</span>
          </div>
        )}
        
        <form id="login-form" class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-neutral-700 mb-3">
              Correo electrónico
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <Icon name="mail" class="text-neutral-400" size={20} />
              </div>
              <input
                type="email"
                name="email"
                required
                class="w-full pl-12 pr-4 py-3.5 border border-neutral-300 rounded-xl focus:ring-2 focus:ring-rose-500 focus:border-transparent transition-all outline-none bg-white placeholder:text-neutral-400"
                placeholder="tu@email.com"
              />
            </div>
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 bg-linear-to-r from-rose-600 to-pink-600 text-white rounded-xl font-semibold hover:from-rose-700 hover:to-pink-700 transition-all shadow-lg shadow-rose-500/30 hover:shadow-xl hover:shadow-rose-500/40 active:scale-[0.98] flex items-center justify-center gap-2"
          >
            <Icon name="mail" size={20} />
            <span>Enviar Magic Link</span>
          </button>
        </form>

        <div id="message" class="mt-6 text-center text-sm hidden"></div>

        <div class="mt-8 pt-6 border-t border-neutral-200">
          <p class="text-xs text-neutral-500 text-center">
            Se enviará un enlace de acceso seguro a tu correo electrónico
          </p>
        </div>
      </div>

      <!-- Info adicional -->
      <div class="mt-6 text-center">
        <a href="/" class="text-sm text-neutral-600 hover:text-rose-600 transition inline-flex items-center gap-2">
          
          Volver a la tienda
        </a>
      </div>
    </div>
  </main>

  <script>
    import { supabase } from '../../lib/supabase';

    const form = document.getElementById('login-form') as HTMLFormElement;
    const messageEl = document.getElementById('message');
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const originalBtnText = submitBtn?.innerHTML;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const email = formData.get('email') as string;

      // Estado de carga
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
      }

      try {
        const { error } = await supabase.auth.signInWithOtp({
          email,
          options: {
            emailRedirectTo: `${window.location.origin}/auth/callback`,
          },
        });

        if (error) throw error;

        if (messageEl) {
          messageEl.innerHTML = `
            <div class="p-4 bg-green-50 border border-green-200 text-green-700 rounded-xl flex items-start gap-3">
              <svg class="shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold">¡Correo enviado!</p>
                <p class="text-sm mt-1">Revisa tu bandeja de entrada para acceder</p>
              </div>
            </div>
          `;
          messageEl.classList.remove('hidden');
        }

        form.reset();
      } catch (error: any) {
        if (messageEl) {
          messageEl.innerHTML = `
            <div class="p-4 bg-red-50 border border-red-200 text-red-700 rounded-xl flex items-start gap-3">
              <svg class="shrink-0 mt-0.5" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold">Error al enviar</p>
                <p class="text-sm mt-1">${error.message}</p>
              </div>
            </div>
          `;
          messageEl.classList.remove('hidden');
        }
      } finally {
        // Restaurar botón
        if (submitBtn && originalBtnText) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalBtnText;
        }
      }
    });
  </script>
</BaseLayout>