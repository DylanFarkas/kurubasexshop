---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getActiveProducts } from "../data/products";
import FilterPanel from "../components/ui/FilterPanel.astro";
import ProductGrid from "../components/sections/ProductGrid.astro";

const allProducts = getActiveProducts();
---

<BaseLayout>
    <div class="w-full min-h-screen bg-white">
        <!-- Header -->
        <div class="w-full mt-5 px-4 md:px-25 py-12 md:py-15">
            <div class="mt-5 flex items-center justify-between gap-4">
                <h1 class="text-4xl md:text-5xl font-bold text-neutral-900">
                    Todos los Productos
                </h1>

                <button 
                    id="open-filters"
                    class="text-sm font-medium text-neutral-700 border border-neutral-300 px-4 py-2 rounded-full hover:bg-neutral-100 cursor-pointer transition-colors"
                >
                    Filtros
                </button>
            </div>

            <p class="text-lg md:text-xl mt-4 text-neutral-600">
                Explora nuestra amplia gama de productos para adultos
            </p>
        </div>

        <FilterPanel totalProducts={allProducts.length} />

        <ProductGrid products={allProducts} />
    </div>
</BaseLayout>