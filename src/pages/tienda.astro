---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getActiveProducts } from "../data/products";
import { CATEGORIES } from "../data/categories";

const allProducts = getActiveProducts();
const categories = CATEGORIES.map((cat) => cat.label);
---

<BaseLayout>
    <div class="w-full min-h-screen bg-white">
        <!-- Header -->
        <div class="w-full px-4 md:px-25 py-12 md:py-20">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-neutral-900">
                    Todos los Productos
                </h1>
                <p class="text-lg md:text-xl mt-4 text-neutral-600">
                    Explora nuestra amplia gama de productos para adultos
                </p>
            </div>
        </div>

        <!-- Filtros -->
        <div class="w-full px-4 md:px-25 pb-8">
            <div class="max-w-7xl mx-auto">
                <div
                    class="bg-neutral-50 rounded-lg p-6 border border-neutral-200"
                >
                    <div
                        class="flex flex-col md:flex-row gap-4 items-start md:items-center justify-between"
                    >
                        <!-- Filtro por categoría -->
                        <div class="flex-1 w-full md:w-auto">
                            <label
                                for="category-filter"
                                class="block text-sm font-medium text-neutral-700 mb-2"
                            >
                                Categoría
                            </label>
                            <select
                                id="category-filter"
                                class="w-full md:w-64 px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                            >
                                <option value="">Todas las categorías</option>
                                {
                                    categories.map((cat) => (
                                        <option value={cat}>{cat}</option>
                                    ))
                                }
                            </select>
                        </div>

                        <!-- Filtro por precio -->
                        <div class="flex-1 w-full md:w-auto">
                            <label
                                for="price-filter"
                                class="block text-sm font-medium text-neutral-700 mb-2"
                            >
                                Ordenar por
                            </label>
                            <select
                                id="price-filter"
                                class="w-full md:w-64 px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                            >
                                <option value="">Más relevantes</option>
                                <option value="price-asc"
                                    >Precio: Menor a Mayor</option
                                >
                                <option value="price-desc"
                                    >Precio: Mayor a Menor</option
                                >
                                <option value="name-asc">Nombre: A-Z</option>
                                <option value="name-desc">Nombre: Z-A</option>
                            </select>
                        </div>

                        <!-- Contador de productos -->
                        <div class="text-sm text-neutral-600">
                            <span id="product-count">{allProducts.length}</span> productos
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grid de Productos -->
        <div class="w-full px-4 md:px-25 pb-20">
            <div class="max-w-7xl mx-auto">
                <div
                    id="products-grid"
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
                >
                    {
                        allProducts.map((product) => {
                            const displayPrice =
                                product.final_price ?? product.price;
                            const hasDiscount =
                                product.discount_pct &&
                                product.discount_pct > 0;

                            return (
                                <article
                                    class="product-card group bg-white border border-neutral-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300"
                                    data-category={product.category}
                                    data-price={displayPrice}
                                    data-name={product.name}
                                >
                                    {/* Imagen del producto */}
                                    <div class="relative aspect-square bg-neutral-100 overflow-hidden">
                                        {product.image ? (
                                            <img
                                                src={product.image}
                                                alt={product.name}
                                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                                loading="lazy"
                                            />
                                        ) : (
                                            <div class="w-full h-full flex items-center justify-center text-neutral-400">
                                                <svg
                                                    class="w-16 h-16"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                    />
                                                </svg>
                                            </div>
                                        )}

                                        {/* Badge de descuento */}
                                        {hasDiscount && (
                                            <div class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded-full text-xs font-bold">
                                                -{product.discount_pct}%
                                            </div>
                                        )}

                                        {/* Badge de destacado */}
                                        {product.featured && (
                                            <div class="absolute top-2 left-2 bg-purple-500 text-white px-2 py-1 rounded-full text-xs font-semibold">
                                                ⭐ Destacado
                                            </div>
                                        )}
                                    </div>

                                    {/* Info del producto */}
                                    <div class="p-4">
                                        <div class="mb-2">
                                            <span class="text-xs text-neutral-500 uppercase tracking-wide">
                                                {product.category}
                                            </span>
                                        </div>

                                        <h3 class="text-lg font-semibold text-neutral-900 mb-3 line-clamp-2">
                                            {product.name}
                                        </h3>

                                        {/* Precios */}
                                        <div class="flex items-baseline gap-2 mb-4">
                                            <span class="text-2xl font-bold text-neutral-900">
                                                ${displayPrice.toLocaleString()}
                                            </span>
                                            {hasDiscount && (
                                                <span class="text-sm text-neutral-500 line-through">
                                                    $
                                                    {product.price.toLocaleString()}
                                                </span>
                                            )}
                                        </div>

                                        {/* Botón */}
                                        <button
                                            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200"
                                            data-product-id={product.id}
                                        >
                                            Ver Producto
                                        </button>
                                    </div>
                                </article>
                            );
                        })
                    }
                </div>

                {/* Mensaje cuando no hay productos */}
                <div id="no-products" class="hidden text-center py-20">
                    <p class="text-xl text-neutral-500">
                        No se encontraron productos
                    </p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    // Lógica de filtrado en el cliente
    const categoryFilter = document.getElementById(
        "category-filter",
    ) as HTMLSelectElement;
    const priceFilter = document.getElementById(
        "price-filter",
    ) as HTMLSelectElement;
    const productsGrid = document.getElementById(
        "products-grid",
    ) as HTMLElement;
    const productCount = document.getElementById(
        "product-count",
    ) as HTMLElement;
    const noProductsMsg = document.getElementById("no-products") as HTMLElement;

    function filterAndSortProducts() {
        const selectedCategory = categoryFilter.value;
        const selectedSort = priceFilter.value;

        // Obtener todas las tarjetas de productos
        const productCards = Array.from(
            document.querySelectorAll(".product-card"),
        ) as HTMLElement[];

        // Filtrar por categoría
        let visibleProducts = productCards.filter((card) => {
            const category = card.dataset.category || "";

            if (!selectedCategory) return true;
            return category === selectedCategory;
        });

        // Ordenar
        if (selectedSort) {
            visibleProducts.sort((a, b) => {
                const priceA = parseFloat(a.dataset.price || "0");
                const priceB = parseFloat(b.dataset.price || "0");
                const nameA = a.dataset.name || "";
                const nameB = b.dataset.name || "";

                switch (selectedSort) {
                    case "price-asc":
                        return priceA - priceB;
                    case "price-desc":
                        return priceB - priceA;
                    case "name-asc":
                        return nameA.localeCompare(nameB);
                    case "name-desc":
                        return nameB.localeCompare(nameA);
                    default:
                        return 0;
                }
            });
        }

        // Ocultar todos los productos primero
        productCards.forEach((card) => {
            card.style.display = "none";
        });

        // Mostrar solo los filtrados y ordenados
        visibleProducts.forEach((card) => {
            card.style.display = "block";
            productsGrid.appendChild(card); // Re-ordenar en el DOM
        });

        // Actualizar contador
        productCount.textContent = visibleProducts.length.toString();

        // Mostrar/ocultar mensaje de "no hay productos"
        if (visibleProducts.length === 0) {
            productsGrid.classList.add("hidden");
            noProductsMsg.classList.remove("hidden");
        } else {
            productsGrid.classList.remove("hidden");
            noProductsMsg.classList.add("hidden");
        }
    }

    // Event listeners
    categoryFilter?.addEventListener("change", filterAndSortProducts);
    priceFilter?.addEventListener("change", filterAndSortProducts);
</script>
